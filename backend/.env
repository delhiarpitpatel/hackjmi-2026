# CareCompanion â€” Environment Variables
# Copy to .env and fill in real values before running

# App
DEBUG=True

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./carecompanion.db
# Production: postgresql+asyncpg://user:pass@host/dbname

# UIDAI Aadhaar FaceRD
UIDAI_API_KEY=

# HawkEye Police Dispatch (Hyderabad)
HAWKEYE_API_KEY=your_hawkeye_key
HAWKEYE_API_URL=https://hawkeye.hyd.gov.in/api/dispatch

# Twilio (SMS for SOS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Wearables
THRYVE_API_KEY=your_thryve_key

# LLM (local=Ollama, openai=OpenAI API)
LLM_PROVIDER=local
LLM_MODEL=mistral:7b-instruct
OPENAI_API_KEY=

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
